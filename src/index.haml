!!! 5

- cache_buster = "?_=#{Time.now.to_i}"

%html
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html" }
    %meta{ :name => "viewport", :content => "width=device-width" }

    %title {{original_filename}} (Shared with Servus for Mac.)

    %link{ :rel => "stylesheet", :type => "text/css", :href => "//assets.servus.io/3/bootstrap.min.css#{cache_buster}" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "//assets.servus.io/3/servus.css#{cache_buster}" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "//fonts.googleapis.com/css?family=Arimo:400,700&subset=latin,latin-ext,greek,greek-ext,vietnamese,cyrillic,cyrillic-ext" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "//assets.servus.io/3/font-awesome.min.css" }
    /[if IE 7 ]
      %link{ :rel => "stylesheet", :type => "text/css", :href => "//assets.servus.io/3/font-awesome-ie7.min.css" }

    :javascript
      var S = { "details": {{&json_data}} };

  %body
    .container-fluid
      #main-content.row-fluid
        #shared-file.span12

          #download-details.popover.top
            .arrow
            %h3.popover-title
              {{original_filename}}

            .popover-content
              %p.file-icon
                %a{ :href => "{{file_link}}" }
                  %img.img-rounded{ :src => "{{file_link}}", :title => "{{original_filename}}" }

          #download-link
            %a.btn.btn-success{ :href => "{{file_link}}" }
              %i.icon-download
              Download
              %span.file-size
                &middot; {{file_size}}


            #sharing.btn-group.dropup
              %button.btn.dropdown-toggle{ :"data-toggle" => "dropdown", :title => "Share this page" }
                %i.icon-share
              %ul.dropdown-menu.pull-right
                %li
                  %a.share-twitter{ :href => "#", :target => "_blank" }
                    %i.icon-twitter
                    Twitter
                %li
                  %a.share-facebook{ :href => "#", :target => "_blank" }
                    %i.icon-facebook
                    Facebook
                %li
                  %a.share-gplus{ :href => "#", :target => "_blank" }
                    %i.icon-google-plus
                    Google+

          #shared-by
            Shared using
            %a{ :href => "https://servus.io/" } Servus for Mac.


    %script{ :src => "//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" }
    %script{ :src => "//assets.servus.io/3/bootstrap.min.js#{cache_buster}" }
    %script{ :src => "//assets.servus.io/3/servus.js#{cache_buster}" }

